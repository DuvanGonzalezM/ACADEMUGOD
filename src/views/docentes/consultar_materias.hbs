<div class="container text-center">
    <h4 class="mt-5">Materias</h4>
    <div class="row">
        <table id="materias" class="table table-striped table-bordered acade-table" style="width:100%" border="3">
            <thead>
                <tr>
                    <th> Materias</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each materias}}
                <tr>
                    <td>{{nombre}}</td>
                    <td><a href="{{../baseUrl}}{{id_materia}}"><i class="bi bi-eye"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>