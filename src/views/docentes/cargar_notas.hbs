<div class="container text-center">
    <a href="/docentes/cargar/materias" type="button" class="btn btn-danger backBtn">
        <i class="bi bi-arrow-left"></i>
        Atrás
    </a>
    <h4 class="mb-5">Estudiantes de {{materia.[0].nombre}}</h4>
    <div class="row">
        <form action="" id="cargar_notas" method="post">
          <table id="notas_estudiantes" class="table table-striped table-bordered acade-table" style="width:100%" border="3">
              <thead>
                  <tr>
                      <th>Identificación</th>
                      <th>Nombre</th>
                      <th>Primer corte</th>
                      <th>Segundo corte</th>
                      <th>Tercer corte</th>
                  </tr>
              </thead>
              <tbody>
                  {{#each estudiantes}}
                  <tr>
                      <td>{{numero_estudiante}}</td>
                      <td>{{nombre}} {{apellido}}</td>
                      <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c1}}"/></td>
                      <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c2}}"/></td>
                      <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c3}}"/></td>
                  </tr>
                  {{/each}}
              </tbody>
          </table>
          <input type="submit" class="btn btn-success" value="Cargar notas">
        </form>
    </div>
</div>