{{!-- Script para el promedio --}}

<script> 
     $(document).ready(function() {
      $('#example').DataTable();

      $('input[name^="primer_corte"], input[name^="segundo_corte"], input[name^="tercer_corte"]').change(function(){
      calcularpromedio(this);
      });
    });

  $(document).ready(function(){
    function calcularpromedio(input){

      var numeroEstudiante = $(this).closest('tr').index() + 1;

      var primerCorte = parseFloat($('input[name^="primer_corte' + numeroEstudiante +'"]').val());

      var segundoCorte = parseFloat($('input[name^="segundo_corte' + numeroEstudiante + '"]').val());

      var tercerCorte = parseFloat($('input[name^="tercer_corte' + numeroEstudiante +'"]').val());

      var promedio = (primerCorte + segundoCorte + tercerCorte) / 3;

      $('input[name="promedio_' + numeroEstudiante + '"]').val(promedio.toFixed(2));


    }
  });
</script>


<body>
<div class="d-flex justify-content-center align-items-center mt-0 mb-1">
<table id="example" class="table table-striped table-bordered mt-2" style="width:100%" border="3">
  <thead>
    <tr>
      <th>Identificación</th>
      <th>Nombre</th>
      <th>Primer corte</th>
      <th>Segundo corte</th>
      <th>Tercer corte</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each estudiantes}}
    <tr>
      <td>{{numero_estudiante}}</td>
      <td>{{nombre}} {{apellido}}</td> <!-- Valor que debe ser arrastrado por BD -->
      <td>{{#if nota_c1}} {{nota_c1}}{{/if}}{{#unless nota_c1}}<input type="text" name="primer_corte_1" />{{/unless}}</td> <!-- Valor que debe ser enviado a BD -->
      <td>{{#if nota_c2}} {{nota_c2}}{{/if}}{{#unless nota_c2}}<input type="text" name="segundo_corte_1" /></td>{{/unless}} <!-- Valor que debe ser enviado a BD -->
      <td>{{#if nota_c3}} {{nota_c3}}{{/if}}{{#unless nota_c3}}<input type="text" name="tercer_corte_1" /></td>{{/unless}} <!-- Valor que debe ser enviado a BD -->
      <td>
        <button type="button" class="btn btn-danger">Limpiar</button>
