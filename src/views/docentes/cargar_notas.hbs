<div class="container text-center">
    <a href="/docentes/cargar/materias" type="button" class="btn btn-danger backBtn">
        <i class="bi bi-arrow-left"></i>
        Atrás
    </a>
    <h4 class="mb-5">Estudiantes de {{materia.[0].nombre}}</h4>
    <div class="row">
        <form action="" id="cargar_notas" method="post">
            <table id="notas_estudiantes" class="table table-striped table-bordered acade-table" style="width:100%" border="3">
                <thead>
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Primer corte</th>
                        <th>Segundo corte</th>
                        <th>Tercer corte</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each estudiantes}}
                    <tr>
                        <td>{{numero_estudiante}}</td>
                        <td>{{nombre}} {{apellido}}</td>
                        <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c1}}"/></td>
                        <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c2}}"/></td>
                        <td><input type="number" max="5" min="0" name="notas_{{id_estudiante}}" value="{{nota_c3}}"/></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
          
            <button type="button" class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#cargarNotas">
                <i class="bi bi-cloud-arrow-up"></i>
                Cargar notas
            </button>

            <div class="modal fade" id="cargarNotas" tabindex="-1" aria-labelledby="cargarNotasLabel"
                aria-hidden="true">
                <div class="modal-dialog ">
                    <div class="modal-content acade-card">
                        <div class="modal-header text-center justify-content-center">
                            <h5 class="acade-modal-title" id="cargarNotasLabel">¿Deseas cargar las notas para la materia {{materia.[0].nombre}}?</h5>
                        </div>
                        <div class="modal-footer text-center justify-content-center">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                No
                                <i class="bi bi-x-lg"></i>
                            </button>
                            <button type="submit" class="btn btn-success">
                                Si
                                <i class="bi bi-cloud-arrow-up"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>